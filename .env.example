# === Required Configuration ===

PRIVATE_KEY=                # Main wallet private key (must have USDC on Arbitrum)
RISK_API_KEY=               # Your API key for Stay Liquid's Risk API (request from Stay Liquid team)

PORTFOLIO_ID=               # Your portfolio ID (any string)
ORG_ID=                     # Your organization ID (any string)
INITIAL_AMOUNT_IN_USD=      # Initial amount in USD to start the portfolio (number)

# === Optional Configuration ===

PORT=                       # (optional) Port for the server to run on (defaults to 3000)
RISK_API_URL=               # (optional) Stay Liquid Risk API URL
RPC_URL=                    # (optional) Arbitrum RPC endpoint
PORTFOLIO_NAME=             # (optional) Name of the portfolio (defaults to "Main Portfolio")
CHAIN_ID=                   # (optional) Chain ID (defaults to 42161, Arbitrum One)
MAX_RISK_SCORE=             # (optional) Maximum risk score (defaults to 3.75)
REBALANCE_FREQUENCY_HOURS=  # (optional) Rebalance frequency in hours (defaults to 1)
REBALANCE_WEBHOOK_URL=      # (optional) Webhook URL for rebalance notifications
MIN_NUM_POSITIONS=          # (optional) Minimum number of positions (defaults to 3)
MAX_NUM_POSITIONS=          # (optional) Maximum number of positions (defaults to 3)
MAIN_ASSET_ADDR=            # (optional) Main asset address (e.g., USDC on Arbitrum)